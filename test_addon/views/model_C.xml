<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="model_c_tree" model="ir.ui.view">
            <field name="name">Model C</field>
            <field name="model">model.c</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="model_c_form" model="ir.ui.view">
            <field name="name">Model C</field>
            <field name="model">model.c</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="model_c_action_window" model="ir.actions.act_window">
            <field name="name">Model C</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model.c</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>

    </data>
</odoo>